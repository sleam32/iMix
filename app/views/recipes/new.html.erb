<h1>iMix</h1>
<h2>Create a new Cocktail</h2>
<%= form_for @recipe do |f| %>
<%= f.label :drink_name, "Give your drink a nickname" %>
<%= f.text_field :drink_name %>
<%= f.label :user_name, "Add your first and last name" %>
<%= f.text_field :user_name %>
<%= f.label :state, "Add the name of your state" %>
<%= f.text_field :state %>
<%= f.submit "Submit" %> <!-- on click, should link to ingredients index -->
<% end %>